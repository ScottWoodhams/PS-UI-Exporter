{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
             "node_modules/@adobe-uxp-types/"
        ],
        "lib": [
            "esnext",
            "dom"
        ],
        "exclude": [
            "node_modules"
        ]
    }
}
